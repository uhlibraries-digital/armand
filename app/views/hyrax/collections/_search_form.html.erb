  <%= form_tag search_form_action, method: :get, class: "form-search" do |f| %>
      <%= hidden_field_tag :search_field, 'all_fields' %>
      <label class="sr-only"><%= t('hyrax.collections.search_form.label', title: presenter.to_s) %></label>
      <div class="input-group">
        <%= text_field_tag :q, current_search_parameters, class: "collection-query form-control", placeholder: t('hyrax.collections.search_form.placeholder'), size: '30', type: "search", id: "collection_search" %>
        <div class="input-group-btn">
          <button type="submit" class="btn btn-primary" id="collection_submit"><i class="glyphicon glyphicon-search"></i> <%= t('hyrax.collections.search_form.button_label') %></button>
        </div>
      </div>
      <%= hidden_field_tag "f[member_of_collection_ids_ssim][]", "#{@presenter.id}" %>
  <% end %>
