<% share_url ||= presenter.permalink %>
<% content_for(:ograph_meta) do %>
  <meta property="og:image" content="<%= presenter.thumbnail_path %>" />
  <meta property="og:title" content="<%= presenter.title.first %>" />
  <meta property="og:description" content="One of of thousands of free digital items from the University of Houston Libraries Digital Collections." />
  <meta property="og:url" content="<%= share_url %>" />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="<%= t('hyrax.institution_name_full') %> <%= t('hyrax.product_name') %>"/>
<% end %>

<% content_for(:twitter_meta) do %>
  <meta name="twitter:site" content="<%= t('hyrax.product_twitter_handle') %>">
  <meta name="twitter:title" content="<%= presenter.title.first %>">
  <meta name="twitter:description" content="One of of thousands of free digital items from the University of Houston Libraries Digital Collections.">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:image" content="<%= presenter.thumbnail_path %>">
  <meta name="twitter:creator" content="<%= t('hyrax.product_twitter_handle') %>">
<% end %>