<ul class="nav nav-tabs work-type-tabs" role="tablist">
  <li role="resentation" class="active">
    <a href="#metadata" aria-controls="metadata" role="tab" data-toggle="tab" aria-expanded="false">
      Full Metadata
    </a>
  </li>
  <li role="resentation">
    <a href="#related" aria-controls="related" role="tab" data-toggle="tab" aria-expanded="false">
      Related Items
    </a>
  </li>
  <% if presenter.editor? %>
    <li role="resentation">
      <a href="#ocr" aria-controls="ocr" role="tab" data-toggle="tab" aria-expanded="false">
        OCR - Staff Only
      </a>
    </li>
  <% end %>
</ul>
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="metadata">
    <%= render 'tab_metadata', presenter: presenter %>
  </div>
  <div role="tabpanel" class="tab-pane" id="related">
    <%= render 'tab_related_items', presenter: presenter %>
  </div>
  <% if presenter.editor? %>
    <div role="tabpanel" class="tab-pane" id="ocr">
      <%= render 'tab_ocr', presenter: presenter %>
    </div>
  <% end %>
</div>